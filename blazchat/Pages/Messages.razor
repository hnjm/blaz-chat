@namespace blazchat.Pages
@using blazchat.Components
@inherits blazchat.Pages.MessagesBase
@page "/messages"
@page "/messages/{Id:guid}"

<PageTitle>Messages</PageTitle>

@if (Id == Guid.Empty)
{
    <MudAppBar Elevation="0" Class="white" Fixed="true" Dense="true">
        <MudTextField T="string" Margin="Margin.Dense" Placeholder="Search" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"/>
    </MudAppBar>

    <MudPaper Elevation="0" Class="px-6 mt-15">
        <MessagesHistory></MessagesHistory>
    </MudPaper>

    <NewMessage></NewMessage>
}
else
{
    <OnlineChat></OnlineChat> 
}

