@namespace blazchat.Pages
@page "/register"
@inherits blazchat.Pages.RegisterBase

<PageTitle>Register</PageTitle>

<MudGrid Spacing="0">
    <MudItem xs="12">
        <MudPaper Elevation="0" Height="100dvh" Width="100%" Class="d-flex align-center justify-center">
            <MudContainer Class="rounded-lg mud-theme-primary pa-10" MaxWidth="MaxWidth.ExtraSmall">
                <MudPaper Elevation="5" Class="pa-3 d-flex rounded-lg align-center justify-center">
                    <MudGrid Spacing="1">
                        <MudItem xs="12">
                            <MudText Align="Align.Center" Typo="Typo.h6">blazchat</MudText>
                            <MudText Align="Align.Center" Typo="Typo.body1">Register</MudText>
                        </MudItem>
                        <MudItem xs="12">
                            <MudStack Spacing="0" Row="false">
                                <MudText>Username</MudText>
                                <MudTextField Margin="Margin.Dense" T="string" Variant="Variant.Outlined"></MudTextField>
                            </MudStack>

                        </MudItem>
                        <MudItem xs="12">
                            <MudStack Spacing="0" Row="false">
                                <MudText>Password</MudText>
                                <MudTextField Margin="Margin.Dense" T="string" Variant="Variant.Outlined"></MudTextField>
                            </MudStack>
                        </MudItem>
                        <MudItem xs="12">
                            <div class="d-flex align-center justify-center">
                                <MudButton FullWidth="true" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Send" Color="Color.Primary">register</MudButton>
                            </div>
                        </MudItem>
                        <MudItem xs="12">
                            <MudText Align="Align.Center" Typo="Typo.body2">Already have an account? <MudLink NavigateTo="/login">login</MudLink></MudText>
                        </MudItem>
                    </MudGrid>
                </MudPaper>
            </MudContainer>
        </MudPaper>
    </MudItem>
</MudGrid>