@page "/"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@inject NavigationManager NavigationManager

<PageTitle>Home</PageTitle>

<MudAppBar Elevation="0" Class="white" Fixed="false" Dense="true">
    <MudText Color="Color.Primary" Typo="Typo.h6">blazchat</MudText>
    <MudSpacer/>
    <MudButton OnClick="OnClickSignUp" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Send" Color="Color.Primary">sign-up</MudButton>
</MudAppBar>

<MudContainer Class="mt-5 rounded-lg" MaxWidth="MaxWidth.Large">
    <MudPaper Height="600px" Width="100%" Class="mud-theme-primary">
        <MudGrid Spacing="0">
            <MudItem xs="12">
                <MudText Align="Align.Center">
                    um texto legal
                </MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>

@code {

    private void OnClickSignUp()
    {
        NavigationManager.NavigateTo("/register");
    }

}