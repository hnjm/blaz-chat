@inherits MessagesHistoryBase
@rendermode InteractiveWebAssembly

<MudGrid Spacing="1">
    @if (Messages is { Count: > 0 })
    {
        @foreach (var message in Messages)
        {
            <MudItem xs="12">
                <MudPaper Elevation="6" Class="pa-3 rounded-lg">
                    <MudGrid>
                        <MudItem Class="align-center justify-center" xs="2" sm="1" md="1">
                            <MudAvatar Color="Color.Primary">@message[0]</MudAvatar>
                        </MudItem>
                        <MudItem xs="10" sm="11" md="11">
                            <MudStack AlignItems="AlignItems.Start" Justify="Justify.Center" Spacing="1" Row="false">
                                <MudText Typo="Typo.body1">Nome</MudText>
                                <MudText Typo="Typo.body2">@message</MudText>
                            </MudStack>
                        </MudItem>
                    </MudGrid>
                </MudPaper>
            </MudItem>
        }
    }
</MudGrid>